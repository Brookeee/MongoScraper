<div id="head">
    <h1>CNN Crime + Justice Scraper</h1>
    <h2>Informative crime news</h2>
</div>

<div class="col-md-12">
    {{#if article}}
    {{#each article}}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>{{this.title}}</h4>
        </div>
        <div class="panel-body">
            <p> {{this.image}}</p>
            <a href={{this.link}} target="_blank"> {{this.link}}</a>
            <br><br>
            <button type="button" class="btn btn-success save" data-id={{this._id}}>Save Article</button>
        </div>
    </div>
    {{/each}}
    {{else}}
    <div class="panel panel-default">
        <div class="panel-body">
            <h4>Sorry. No new articles available</h4>
        </div>
    </div>
    {{/if}}
</div>
</div>